<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.pkinsellaweb.babyMate"
    android:installLocation="auto">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission. ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/blogo"
        android:label="BabyMate"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:replace="android:label">

        <activity android:name=".SoundData" />
        <activity android:name=".TempData" />
        <activity android:name=".Weather" />
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".VideoScreen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ViewTemp"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MessageScreen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Temp"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Message"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UserProfile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Dashboard"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Music" />
        <activity
            android:name=".TempScreen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MessageOptions"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Notifications"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LightData"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NewDash"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TempControl"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>