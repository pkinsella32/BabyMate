<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/orangebackground"
    tools:context="com.pkinsellaweb.BabyMate.Temp"
    android:label="Messages" >

    <ImageView
        android:id="@+id/messageImage"
        android:layout_width="365dp"
        android:layout_height="98dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/todo"
        android:padding="5dp"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toTopOf="@+id/messageList"
        app:layout_constraintStart_toStartOf="@+id/messageList"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ListView
        android:id="@+id/messageList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/messageImage">


    </ListView>

</android.support.constraint.ConstraintLayout>
