<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="8"
    tools:context=".MainActivity"
    android:background="@drawable/orangebackground">

    <LinearLayout
        android:orientation="vertical"
        android:weightSum="12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="350dp"
            android:layout_height="250dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logo"
            android:contentDescription="@string/todo"
            />

    <TextView
    android:id="@+id/text1"
    android:layout_marginStart="15dp"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:text="@string/current_temp_22c"
    android:gravity="start"
    android:textAlignment="gravity"
    android:textSize="34sp"
    android:textStyle="bold"
    android:drawableEnd="@drawable/weather"/>


        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:drawableEnd="@drawable/on"
            android:fontFamily="sans-serif"
            android:gravity="start"
            android:text="@string/fan_on_off"
            android:textAlignment="gravity"
            android:textSize="34sp"
            android:textStyle="bold" />

    <TextView
        android:id="@+id/text3"
        android:layout_marginStart="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/warmer"
        android:gravity="start"
        android:textAlignment="gravity"
        android:textSize="34sp"
        android:textStyle="bold"
        android:drawableEnd="@drawable/up"/>

        <TextView
            android:id="@+id/text4"
            android:layout_marginStart="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/colder"
            android:gravity="start"
            android:textAlignment="gravity"
            android:textSize="34sp"
            android:textStyle="bold"
            android:drawableEnd="@drawable/down"/>






</LinearLayout>




</ScrollView>
